package alg;

public class ArrayGrid<T> {
	private T[][] array;
	private int xSize;
	private int ySize;
	private T defaultValue;
	
	public ArrayGrid(int xSize, int ySize) {
		this(xSize, ySize, null);
	}
	
	public ArrayGrid(int xSize, int ySize, T defaultValue) {
		this.xSize = xSize;
		this.ySize = ySize;
		this.defaultValue = defaultValue;
		
		array = (T[][]) new Object[ySize][xSize];
	}
	
	public T get(int x, int y) {
		if(!inBounds(x, y)) return defaultValue;
		
		return array[y][x];
	}
	
	public void set(int x, int y, T value) {
		if(!inBounds(x, y)) return;
		
		array[y][x] = value;
	}
	
	public int xSize() {
		return xSize;
	}
	
	public int ySize() {
		return ySize;
	}
	
	public boolean inBounds(int x, int y) {
		
		return 0 > x || x >= xSize ||
			   0 > y || y >= ySize;
	}
}
